{
  "name": "hr-clock",
  "version": "1.0.0",
  "description": "Sistema simple de control de marcaciones y pipeline de tareas para RRHH",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "docker:build": "docker build -t taskok .",
    "docker:run": "docker run -p 3000:3000 taskok",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "test": "jest --config jest.config.js --verbose --runInBand",
    "db:up": "docker compose up -d mongo",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f mongo",
    "db:migrate": "npx prisma migrate deploy",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "hr",
    "clock",
    "jest"
  ],
  "author": "Juan Andr√©s Escobar Vega",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "supertest": "^7.1.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "testUser": {
    "email": "test@test.com",
    "password": "123456"
  }
}
